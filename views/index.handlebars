{{!-- Burgers Added Column --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-6">
      <h3 class="mb-3">Burgers to be devoured</h3>

        {{!-- Iterate through 'burgers' data item
          for the ones that are not devoured yet. --}}
        {{#each burgers}}
        {{#unless this.devoured}}
          <p class="p-2 mb-3 bg-light text-dark">
            {{this.burger_name}}
            {{!-- Devour button --}}
            <button type="button" class="devour-burger ml-3 btn btn-warning"
              data-id="{{id}}">Devour</button>
          </p>
        {{/unless}}
        {{/each}}
    </div>



